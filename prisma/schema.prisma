generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma" //
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int     @id @default(autoincrement())
  name      String
  lastname  String
  dni       String
  email     String  @unique
  password  String
  available Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt //le indica al gestor de BD que cuando se actualice ponga esa fecha
}

model Invoice {
  id     Int      @id @default(autoincrement())
  client String
  date   DateTime @default(now())
  total  Float
}
